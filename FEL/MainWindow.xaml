<Window x:Class="FEL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FEL"
        mc:Ignorable="d"
        Title="Sophia" Height="600" Width="800" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="20" VerticalAlignment="Top" Background="#FFEBA2A2">
            <Label Content="Navigation Menu" Margin="0,0,10,0" FontSize="9" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Button Name="LearnerViewButton" Content="LearnerView" Margin="0,0,10,0" Click="LearnerBtnClick" FontSize="10" Background="#FFE37272" MinWidth="50"/>
            <Button Name="TutorViewButton" Content="TutorView" Margin="0,0,10,0" Click="TutorBtnClick" Background="#FFE37272" FontSize="10" MinWidth="50"/>
            <Button Name="MatchView" Content="MatchView" Click="MatchBtnClick" FontSize="10" Background="#FFE37272" MinWidth="50"/>
            <Button Content="Exit"  HorizontalAlignment="Right" MinWidth="50" Margin="450,0,0,0" Click="Exit_Click"/>
        </StackPanel>
        <Frame Name="Menu" Margin="0,20,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
